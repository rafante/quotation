<mvc:View id="DetailsPrice" controllerName="br.com.patrimar.criacotacao.controller.Detail" displayBlock="true" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<ObjectHeader icon="sap-icon://map" title="{jModel>SolcotNo}" titleLevel="H1" number="{/jModel>SolcotNo}" backgroundDesign="Translucent">
						<statuses>
							<ObjectStatus icon="{ path: 'jModel>/Status', formatter: '.formatter.getStatusIcon' }" state="{
									path: 'jModel>/Status',
									formatter: '.formatter.getStatusState'
								}" text="{jModel>/StatusDescription}"/>
						</statuses>
						<attributes>
							<ObjectAttribute title="{i18n>SolcotNo}" text="{jModel>/SolcotNo}"/>
						</attributes>
					</ObjectHeader>

				</content>
			</Page>
		</pages>
	</App>
</mvc:View>